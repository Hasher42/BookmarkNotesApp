<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookmarkNotesApp.Views.MainPage"
             Title="Bookmarks"
             xmlns:viewmodels="clr-namespace:BookmarkNotesApp.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:BookmarkViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Title -->
        <Label Text="My Bookmarks"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" />

        <!-- Add Bookmark Button -->
        <Button Text="Add Bookmark"
                Command="{Binding AddCommand}"
                BackgroundColor="#0078D7"
                TextColor="White"
                CornerRadius="10"
                Padding="10" />

        <!-- List of Bookmarks -->
        <CollectionView ItemsSource="{Binding Bookmarks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="5"
                           BorderColor="LightGray"
                           CornerRadius="8"
                           HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black" />
                            <Label Text="{Binding Url}"
                                   FontSize="14"
                                   TextColor="Gray" />

                            <!-- Delete Button -->
                            <Button Text="Delete"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                    CommandParameter="{Binding}"
                                    CornerRadius="8"
                                    Padding="5"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
