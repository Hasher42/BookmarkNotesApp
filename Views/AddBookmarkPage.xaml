<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookmarkNotesApp.Views.AddBookmarkPage"
             Title="Add Bookmark">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Title:" FontAttributes="Bold"/>
            <Entry Text="{Binding Title}" Placeholder="Enter bookmark title" />

            <Label Text="URL:" FontAttributes="Bold"/>
            <Entry Text="{Binding Url}" Placeholder="https://example.com" Keyboard="Url" />

            <Label Text="Category:" FontAttributes="Bold"/>
            <Entry Text="{Binding Category}" Placeholder="Work, Study, Personal" />

            <Button Text="Save" Command="{Binding SaveCommand}" />

        </StackLayout>
    </ScrollView>
</ContentPage>
